            <li Class="EBF.Hediffs.HediffCompProperties_MaxHPAdjust">
              <scaleAdjustment>0.25</scaleAdjustment>
            </li>
          </value>
        </li>

        <li Class="PatchOperationAdd">
          <xpath>/Defs/HediffDef[defName = "CNNetworkedLeg"]/comps</xpath>
